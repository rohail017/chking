@model ProjectEAD.Models.Member
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

<script>
    function f1() {
        var name = $("#Name").val()
        $.getJSON("/Home/checkAvalability/?name=" + name, function (data) {
            if (data) {
                
                $("#p1").text("User Name Already Used");
            }
            else
            {
               
                $("#p1").text("UserName Available");
            }
        });
    }
    </script>

